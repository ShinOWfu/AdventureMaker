<div class="container pt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h2 class="mb-4">Your Stories</h2>
          <div class="story-list">
            <% @stories.each do |story| %>
              <%= link_to chat_path(story.chat), class: "text-decoration-none" do %>
                <div class="card story-card mb-3">
                  <div class="card-body">
                    <h5 class="card-title"><%= story.protagonist_name.capitalize %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= story.genre %></h6>
                    <% if story.protagonist_description.present? %>
                      <p class="card-text"><%= truncate(story.protagonist_description, length: 100) %></p>
                    <% end %>
                    <% if story.topic.present? %>
                      <p class="card-text text-muted"><small><%= truncate(story.topic, length: 80) %></small></p>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
