<% if message.image.attached? %>
  <%= cl_image_tag message.image.key, class: 'chat-image', data: { bs_toggle: 'modal', bs_target: '#imageModal' }, style: 'cursor: pointer;' %>

  <!-- Modal -->
  <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content" style="width: auto; display: inline-block;">
        <div class="modal-body p-0">
          <%= cl_image_tag message.image.key, class: 'img-fluid', style: 'display: block; max-height: 90vh; max-width: 90vw; width: auto; height: auto;' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
