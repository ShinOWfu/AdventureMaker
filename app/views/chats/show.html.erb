<div class="container">

  <div class="image mt-3 d-flex justify-content-center">
    <% if @chat.messages.any? %>
      <% if @chat.messages.last.image.attached? %>
        <%= cl_image_tag @chat.messages.last.image.key, class: 'img-fluid', style: 'max-width: 400px;' %>
      <% end %>
    </div>

    <div id='messages' class='mt-3'>
      <p><%= @chat.messages.last.content %></p>
    </div>
  <% end %>

  <% if @chat.messages.count >= 5 %>
    <div id='chatbox'>
      <%= simple_form_for [@chat, @message] do |f| %>
        <%= f.input :content, label: 'What is your next action?', required: true %>
        <%= f.submit %>
      <% end %>
    </div>
  <% else %>
      <%= link_to 'See the end of your journey', assessment_story_path(@chat.story), class: 'btn btn-secondary' %>
  <% end %>

</div>
